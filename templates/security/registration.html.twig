{% extends 'base.html.twig' %}

{% block body %}
    <h1>S'inscrire sur le site</h1>

    {{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
    {{ form_row(form.email,{'label': 'Adresse mail','attr': {'placeholder': 'Adresse mail'}}) }}
    {{ form_row(form.password,{'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe'}}) }}

    <button type="submit" class="btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}