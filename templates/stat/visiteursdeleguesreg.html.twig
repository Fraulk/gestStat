{% extends 'base.html.twig' %}

{% block title %}Gestion de statistique | Liste des visiteurs et délégués par region{% endblock %}

{% block body %}
{# La page s'affiche seulement quand on est connecté #}
{% if app.user %}
   <div class="container">
        <div class="row" style="padding-top: 10px;">
{# region est définit dans le statController #}
{% for region in regions  %}        
            <div class="col-md-4">
                <div class="card mb-2">
                    
                    <h3 class="card-header">{{ region.RegNom }} {{ region.RegCode }} </h3>
                    <div class="card-body">
                    {% for delegue in region.travaillers %}
                        {% if delegue.traRole == "Délégué" %}
                            <p>{{ delegue.traVis.visNom }} {{ delegue.traRole }} </p>
                        {% endif %}
                    {% endfor %}
                    </div>
                </div>               
            </div>
        
{% endfor %}
        </div>
    </div>                   
{% else %}
{# Sinon ca affiche ca #}
<center><h1 style="padding-top:315px; font-size:115px;">Connectez-vous</h1></center>
{% endif %}

 

{% endblock %}
